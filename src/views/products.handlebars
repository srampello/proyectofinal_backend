<!-- BOOTSTRAP  -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<main class="main">
    <aside class="aside">
        <div class="container">
            <h2>Sneakers</h2>
            <div>
                <h3>Price</h3>
                <input type="range" min="0" max="1000">
            </div>
            <div>
                <h3>Brand</h3>
                <select name="" id="">
                    <option value="Jordan">Jordan</option>
                    <option value="Nike">Nike</option>
                    <option value="Yeezy">Yeezy</option>
                    <option value="Adidas">Adidas</option>
                </select>
            </div>
            
        </div>
    </aside>
    <section class="section">
        <h1>Products List</h1>
        <div>
            {{#if hasPrevPage}}
                <a href="{{this.prevLink}}"> << Anterior</a>
            {{/if}}
            &nbsp;
            {{this.page}}
            &nbsp;
            {{#if hasNextPage}}
                <a href="{{this.nextLink}}"> Siguiente >> </a>
            {{/if}}
        </div>
        <ul>
            {{#each docs}}
                <div class="card">
                    <img src={{this.image}} alt={{this.alt}} class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">{{this.name}}</h2>
                        <h3 class="card-text">{{this.brand}}</h3>
                        <p>U$D {{this.price}}</p>
                        <a class="btn btn-primary" href="/api/products/{{this._id}}">{{this.name}}</a>
                    </div>
                </div>
            {{/each}}
        </ul>
    </section>
</main>




<!-- SCRIPTS -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="../public/js/products.js"></script>


<style>
    .main{
        background-color: yellow;
        width: 100%;
        height: 100%;
        display: flex;
    }

    .aside{
        margin: 1%;
        background-color: red;
        width: 20%;
    }

    .section{
        margin: 1%;
        background-color: blue;
        width: 80%;
    }

    ul{
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }

    div{
        width: 18rem;
    }
</style>
