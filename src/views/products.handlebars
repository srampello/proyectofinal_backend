<!-- BOOTSTRAP  -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="d-flex flex-wrap gap-3 align-content-center justify-content-center">
    {{#each docs}}
        <a href="/api/products/{{this._id}}" class="text-decoration-none">
            <div class="card" style="width: 12rem; height: 350px">
                <img src={{this.image}} alt={{this.alt}} class="card-img-top">
                <div class="card-body">
                    <h2 class="card-title" style="font-size: smaller;">{{this.name}}</h2>
                    <h3 class="card-text" style="font-size: x-small;">{{this.brand}}</h3>
                    <p style="font-weight: bolder; font-size: smaller">U$D {{this.price}}</p>
                </div>
            </div>
        </a>
    {{/each}}
</div>




